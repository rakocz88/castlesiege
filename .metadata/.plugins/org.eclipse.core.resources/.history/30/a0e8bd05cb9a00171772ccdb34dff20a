package com.pilaf.cs.tests.builder;

public class UserTest {

	private final String login; // required
	private final String password;
	private final String authorizationToken;

	private UserTest(UserTestBuilder builder) {
		this.login = builder.login;
		this.password = builder.password;
		this.authorizationToken = builder.authorizationToken;
	}

	public String getLogin() {
		return login;
	}

	public String getPassword() {
		return password;
	}

	public String getAuthorizationToken() {
		return authorizationToken;
	}


	public static class UserTestBuilder {
		private String login;
		private String password;
		private String authorizationToken;

		public UserTestBuilder() {

		}

		public UserTestBuilder setLogin(String login) {
			this.login = login;
			return this;
		}
		
		

		public UserTestBuilder setPassword(String password) {
			this.password = password;
			return this;
		}

		public UserTestBuilder setAuthorizationToken(String authorizationToken) {
			this.authorizationToken = authorizationToken;
			return this;
		}

		public UserTest build() {
			return new UserTest(this);
		}

	}

}
